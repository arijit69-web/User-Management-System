<!-- include header -->
<%- include('include/_header')%>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add-user" class="border-shadow">
        <span class="text-gradient"
          >New User <i class="fa-solid fa-user"></i
        ></span>
      </a>
    </div>
    <!-- form handling -->
    <form action="/" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Vaccination Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Display User data -->

          <%- include('include/_show')%>

          <!-- /Display User data-->
        </tbody>
      </table>
    </form>
  </div>
</main>
<!-- /Main Site -->

